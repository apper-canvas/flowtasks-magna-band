{
  "/": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "User is authenticated",
            "rule": "authenticated"
          }
        ],
        "operator": "OR"
      },
      "redirectOnDeny": "/login"
    }
  },
  "/login": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Public access",
            "rule": "public"
          }
        ],
        "operator": "OR"
      },
      "excludeRedirectQuery": true
    }
  },
  "/signup": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Public access",
            "rule": "public"
          }
        ],
        "operator": "OR"
      },
      "excludeRedirectQuery": true
    }
  },
  "/callback": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Public access",
            "rule": "public"
          }
        ],
        "operator": "OR"
      },
      "excludeRedirectQuery": true
    }
  },
  "/error": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Public access",
            "rule": "public"
          }
        ],
        "operator": "OR"
      },
      "excludeRedirectQuery": true
    }
  },
  "/reset-password/:appId/:fields": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Public access",
            "rule": "public"
          }
        ],
        "operator": "OR"
      },
      "excludeRedirectQuery": true
    }
  },
  "/prompt-password/:appId/:emailAddress/:provider": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Public access",
            "rule": "public"
          }
        ],
        "operator": "OR"
      },
      "excludeRedirectQuery": true
    }
  },
  "*": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Public access",
            "rule": "public"
          }
        ],
        "operator": "OR"
      }
    }
  }
}